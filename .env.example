# 🔐 INSTAUP Backend 환경변수 예시

# JWT 시크릿 키 (프로덕션에서는 반드시 강력한 키로 변경)
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here

# 데이터베이스 (Neon PostgreSQL)
DATABASE_URL="postgresql://username:password@your-neon-endpoint.neon.tech/database?sslmode=require"

# CORS 설정 (프론트엔드 URL들)
CORS_ORIGIN=https://your-frontend-url.netlify.app,https://your-admin-url.netlify.app

# 서버 설정
PORT=3001
NODE_ENV=production

# 추천인 시스템 설정
REFERRAL_SIGNUP_BONUS=10000
REFERRAL_COMMISSION_RATE_L1=0.10
REFERRAL_COMMISSION_RATE_L2=0.05
REFERRAL_COMMISSION_RATE_L3=0.03

# 결제 API (프로덕션)
TOSSPAY_CLIENT_SECRET=live_sk_your_toss_secret_key
KAKAOPAY_ADMIN_KEY=your_kakao_admin_key

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# 파일 업로드 설정
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
